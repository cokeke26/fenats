generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MemberStatus {
  ACTIVE
  INACTIVE
}

model Member {
  id        Int          @id @default(autoincrement())
  fullName  String
  rut       String       @unique
  rutMasked String
  affiliate String?
  status    MemberStatus @default(ACTIVE)

  token     String       @unique

  createdAt DateTime     @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([token])
  @@index([status])
  @@index([rut])
}
