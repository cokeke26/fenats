generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MemberStatus {
  ACTIVE
  INACTIVE
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Member {
  id        Int          @id @default(autoincrement())
  fullName  String
  rut       String       @unique
  rutMasked String
  affiliate String?
  gender    Gender?
  status    MemberStatus @default(ACTIVE)

  token     String       @unique

  createdAt DateTime     @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // Auditoría de importación
  lastImportAt DateTime? // 
  importSource String?   // (ej: "FENATS OCTAVA ARAUCO 12/2025")

  @@index([token])
  @@index([status])
  @@index([rut])
}

enum AdminRole {
  SUPERADMIN
  ADMIN
  VIEWER
}

model AdminUser {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  passwordHash String
  role         AdminRole @default(VIEWER)
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
