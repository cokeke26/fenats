<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>FENATS · Admin · Usuarios</title>
  <link rel="icon" type="image/png" href="/favicon.png" />
  <style>
    :root{
      --bg:#0b1220;
      --card:rgba(255,255,255,.08);
      --border:rgba(255,255,255,.12);
      --text:rgba(255,255,255,.92);
      --muted:rgba(255,255,255,.70);
      --shadow:0 20px 60px rgba(0,0,0,.35);
      --ok:#22c55e; --warn:#f59e0b; --bad:#ef4444; --blue:#3b82f6;
      --btn: rgba(255,255,255,.10);
      --btnBorder: rgba(255,255,255,.16);
    }
    *{box-sizing:border-box}
    body{
      margin:0; min-height:100vh; color:var(--text);
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
      background:
        radial-gradient(800px 500px at 20% 10%, rgba(34,197,94,.18), transparent 60%),
        radial-gradient(900px 600px at 90% 30%, rgba(59,130,246,.20), transparent 60%),
        radial-gradient(700px 500px at 40% 90%, rgba(245,158,11,.16), transparent 60%),
        var(--bg);
      padding: 24px;
    }
    .wrap{width:min(1100px,100%); margin:0 auto}

    /* Top */
    .top{
      display:flex; align-items:center; justify-content:space-between; gap:12px; flex-wrap:wrap;
      margin-bottom:14px;
    }
    .brand{display:flex;align-items:center;gap:10px;font-weight:900;letter-spacing:.2px}
    .dot{
      width:12px;height:12px;border-radius:999px;background:var(--blue);
      box-shadow:0 0 0 6px rgba(255,255,255,.06)
    }
    .nav{display:flex;gap:10px;flex-wrap:wrap}
    .btn{
      display:inline-flex;align-items:center;justify-content:center;
      padding:10px 12px;border-radius:14px;border:1px solid var(--btnBorder);
      background:var(--btn);color:var(--text);text-decoration:none;font-weight:900;font-size:14px;
      cursor:pointer;
    }
    .btnPrimary{background:rgba(255,255,255,.14);border-color:rgba(255,255,255,.22)}
    .btnDanger{
      border-color: rgba(239,68,68,.35);
      background: rgba(239,68,68,.10);
    }
    .btnOk{
      border-color: rgba(34,197,94,.30);
      background: rgba(34,197,94,.10);
    }

    /* Card */
    .card{
      background:var(--card);
      border:1px solid var(--border);
      border-radius:18px;
      box-shadow:var(--shadow);
      overflow:hidden;
    }
    .head{padding:18px 22px 14px;border-bottom:1px solid var(--border)}
    h1{margin:0;font-size:20px}
    p{margin:8px 0 0;color:var(--muted);font-size:13px;line-height:1.45}
    .body{padding:16px 22px 20px}

    /* Alerts */
    .alert{
      border:1px solid rgba(239,68,68,.35);
      background: rgba(239,68,68,.10);
      padding: 10px 12px;
      border-radius: 14px;
      color: rgba(255,255,255,.92);
      font-size: 13px;
      margin-bottom: 12px;
    }
    .success{
      border:1px solid rgba(34,197,94,.30);
      background: rgba(34,197,94,.10);
      padding: 10px 12px;
      border-radius: 14px;
      color: rgba(255,255,255,.92);
      font-size: 13px;
      margin-bottom: 12px;
    }

    /* Grid */
    .grid{
      display:grid;
      grid-template-columns: 420px 1fr;
      gap:12px;
      align-items:start;
    }
    @media (max-width: 980px){
      .grid{grid-template-columns:1fr}
    }

    /* Form panels */
    .panel{
      background: rgba(255,255,255,.05);
      border:1px solid rgba(255,255,255,.10);
      border-radius:18px;
      padding: 14px;
    }
    .panelTitle{margin:0;font-size:14px;font-weight:950}
    .panelSub{margin:6px 0 0;color:var(--muted);font-size:12px;line-height:1.4}
    .actionsRow{margin-top:12px;display:flex;gap:10px;flex-wrap:wrap}
    .actionsRow .btn{flex:1}

    /* Table */
    table{width:100%;border-collapse:separate;border-spacing:0 10px}
    th{
      text-align:left;
      color:rgba(255,255,255,.70);
      font-size:12px;
      font-weight:900;
      padding: 0 10px;
      white-space: nowrap;
    }
    td{
      padding: 12px 10px;
      background: rgba(255,255,255,.05);
      border-top: 1px solid rgba(255,255,255,.10);
      border-bottom: 1px solid rgba(255,255,255,.10);
      font-size: 14px;
      vertical-align: middle;
    }
    td:first-child{
      border-left: 1px solid rgba(255,255,255,.10);
      border-top-left-radius: 14px;
      border-bottom-left-radius: 14px;
    }
    td:last-child{
      border-right: 1px solid rgba(255,255,255,.10);
      border-top-right-radius: 14px;
      border-bottom-right-radius: 14px;
    }
    .muted{color:var(--muted);font-size:12px}
    .badge{
      display:inline-flex;align-items:center;gap:8px;
      padding:8px 10px;border-radius:999px;
      border:1px solid rgba(255,255,255,.14);
      background:rgba(255,255,255,.06);
      font-size:12px;font-weight:950;
      white-space:nowrap;
    }
    .bDot{width:8px;height:8px;border-radius:999px}
    .ok{background:var(--ok)}
    .warn{background:var(--warn)}
    .role{font-weight:950;letter-spacing:.2px}
    .tblActions{display:flex;gap:8px;flex-wrap:wrap;justify-content:flex-end}
    .mini{
      padding:9px 10px;
      border-radius:12px;
      font-size:12px;
      width:auto;
    }

    /* Reset password */
    .resetWrap{
      margin-top:10px;
      padding-top:10px;
      border-top:1px dashed rgba(255,255,255,.12);
    }
    .resetRow{display:flex;gap:8px;flex-wrap:wrap;align-items:center}
    .resetRow .input{flex:1; min-width: 160px}

    /* ✅ Mobile scroll: wrapper */
    .tableScroll{
      overflow-x:auto;
      -webkit-overflow-scrolling: touch;
      padding-bottom: 6px;
    }
    /* Haz que la tabla tenga un mínimo (para que en móvil se pueda desplazar) */
    .tableMin{
      min-width: 860px;
    }

    /* ✅ Modal */
    .modalBack{
      position:fixed;
      inset:0;
      background: rgba(0,0,0,.55);
      display:none;
      align-items:center;
      justify-content:center;
      padding: 18px;
      z-index: 50;
    }
    .modalBack.open{display:flex;}
    .modal{
      width: min(520px, 100%);
      background: rgba(15,23,42,.92);
      border: 1px solid rgba(255,255,255,.12);
      border-radius: 18px;
      box-shadow: var(--shadow);
      overflow:hidden;
      backdrop-filter: blur(10px);
    }
    .modalHead{
      padding: 16px 16px 12px;
      border-bottom: 1px solid rgba(255,255,255,.12);
      display:flex;
      align-items:flex-start;
      justify-content:space-between;
      gap: 10px;
    }
    .modalTitle{margin:0;font-size:16px;font-weight:950}
    .modalSub{margin:6px 0 0;color:var(--muted);font-size:12px;line-height:1.4}
    .modalBody{padding: 14px 16px 16px;}
    .field{margin-top:12px}
    .label{font-size:12px;color:var(--muted);margin-bottom:6px}
    .input,select{
      width:100%;
      border-radius:14px;
      border:1px solid rgba(255,255,255,.14);
      background:rgba(255,255,255,.06);
      padding:10px 12px;
      color:var(--text);
      outline:none;
      font-size:14px;
    }
    select option{background:#0b1220}
    .modalActions{
      margin-top: 14px;
      display:flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    .modalActions .btn{flex:1; min-width: 160px;}
    .xbtn{
      border: 1px solid rgba(255,255,255,.16);
      background: rgba(255,255,255,.08);
      border-radius: 12px;
      padding: 8px 10px;
      cursor: pointer;
      color: var(--text);
      font-weight: 950;
    }
  </style>
</head>

<body>
  <% const isSuper = (role === "SUPERADMIN"); %>

  <div class="wrap">
    <div class="top">
      <div class="brand"><span class="dot"></span><span>FENATS · Usuarios Admin</span></div>
      <div class="nav">
        <a class="btn" href="/admin">Panel</a>
        <a class="btn" href="/admin/members">Socios</a>
        <% if (isSuper) { %>
          <a class="btn btnPrimary" href="/admin/users/new">Nuevo usuario</a>
        <% } %>
        <a class="btn" href="/admin/logout">Salir</a>
      </div>
    </div>

    <div class="card">
      <div class="head">
        <h1>Gestión de usuarios</h1>
        <p>Solo <b>SUPERADMIN</b> puede crear, activar/inactivar, editar rol y resetear contraseñas.</p>
      </div>

      <div class="body">
        <% if (error) { %>
          <div class="alert"><b>Error:</b> <%= error %></div>
        <% } %>

        <% if (message) { %>
          <div class="success"><b>OK:</b> <%= message %></div>
        <% } %>

        <div class="grid">
          <!-- Panel info/atajos -->
          <div class="panel">
            <div class="panelTitle">Acciones rápidas</div>
            <div class="panelSub">
              Crea usuarios desde “Nuevo usuario”. Aquí puedes administrar estado, editar rol/teléfono y resetear contraseña.
            </div>

            <div class="actionsRow">
              <% if (isSuper) { %>
                <a class="btn btnPrimary" href="/admin/users/new">Crear usuario</a>
              <% } %>
              <a class="btn" href="/admin/users">Refrescar</a>
            </div>

            <div class="resetWrap">
              <div class="panelTitle" style="margin-top:6px">Notas</div>
              <div class="panelSub">
                • Un usuario <b>inactivo</b> no puede iniciar sesión.<br/>
                • Roles: <b>VIEWER</b> (solo lectura), <b>ADMIN</b> (gestión socios), <b>SUPERADMIN</b> (todo).<br/>
                • Teléfono: pensado para <b>2FA</b> (WhatsApp/SMS) a futuro.
              </div>
            </div>
          </div>

          <!-- Tabla -->
          <div class="panel" style="padding:0; overflow:hidden;">
            <div style="padding:14px 14px 0;">
              <div class="panelTitle">Usuarios existentes</div>
              <div class="panelSub">Total: <b><%= users.length %></b></div>
            </div>

            <div style="padding:10px 14px 14px;">
              <div class="tableScroll">
                <table class="tableMin">
                  <thead>
                    <tr>
                      <th>Usuario</th>
                      <th>Rol</th>
                      <th>Estado</th>
                      <th>Correo</th>
                      <th>Teléfono</th>
                      <th>Fechas</th>
                      <th style="text-align:right">Acciones</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% users.forEach(u => { %>
                      <tr>
                        <td>
                          <div style="font-weight:950"><%= u.username %></div>
                          <div class="muted">ID: <%= u.id %></div>
                        </td>

                        <td>
                          <span class="badge">
                            <span class="bDot" style="background: rgba(255,255,255,.55)"></span>
                            <span class="role"><%= u.role %></span>
                          </span>
                        </td>

                        <td>
                          <% if (u.isActive) { %>
                            <span class="badge"><span class="bDot ok"></span>ACTIVO</span>
                          <% } else { %>
                            <span class="badge"><span class="bDot warn"></span>INACTIVO</span>
                          <% } %>
                        </td>

                        <td class="muted">
                        <%= (u.email ?? "-") %>
                        </td>

                        <td class="muted">
                          <%= (u.phone ?? "-") %>
                        </td>

                        <td class="muted">
                          <div>Creado: <%= new Date(u.createdAt).toLocaleString("es-CL") %></div>
                          <div>Upd: <%= new Date(u.updatedAt).toLocaleString("es-CL") %></div>
                        </td>

                        <td>
                          <div class="tblActions">
                            <% if (isSuper) { %>
                              <!-- Editar (modal) -->
                              <button
                                class="btn mini"
                                type="button"
                                data-edit
                                data-id="<%= u.id %>"
                                data-username="<%= u.username %>"
                                data-role="<%= u.role %>"
                                data-phone="<%= u.phone ?? '' %>"
                                data-email="<%= u.email ?? '' %>"
                              >
                                Editar
                              </button>

                              <!-- Toggle -->
                              <form method="post" action="/admin/users/<%= u.id %>/toggle" style="display:inline">
                                <% if (u.isActive) { %>
                                  <button class="btn mini btnDanger" type="submit">Inactivar</button>
                                <% } else { %>
                                  <button class="btn mini btnOk" type="submit">Activar</button>
                                <% } %>
                              </form>
                            <% } else { %>
                              <span class="muted">Sin acciones</span>
                            <% } %>
                          </div>

                          <% if (isSuper) { %>
                            <!-- Reset password -->
                            <form method="post" action="/admin/users/<%= u.id %>/reset-password" class="resetWrap">
                              <div class="resetRow">
                                <input class="input" type="password" name="password" placeholder="Nueva contraseña" required />
                                <button class="btn mini btnPrimary" type="submit">Reset</button>
                              </div>
                              <div class="muted" style="margin-top:6px">
                                Cambia la contraseña del usuario <b><%= u.username %></b>.
                              </div>
                            </form>
                          <% } %>
                        </td>
                      </tr>
                    <% }) %>

                    <% if (!users || users.length === 0) { %>
                      <tr>
                        <td colspan="7" style="text-align:center" class="muted">
                          No hay usuarios registrados.
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>

              <div class="muted" style="margin-top:8px">
                En móvil: desliza horizontalmente para ver todas las columnas.
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- ✅ Modal editar usuario -->
  <div id="modalBack" class="modalBack" aria-hidden="true">
    <div class="modal" role="dialog" aria-modal="true" aria-labelledby="mTitle">
      <div class="modalHead">
        <div>
          <h2 id="mTitle" class="modalTitle">Editar usuario</h2>
          <div class="modalSub" id="mSub">Cambia rol y teléfono para 2FA(a futuro).</div>
        </div>
        <button class="xbtn" type="button" id="closeModal">✕</button>
      </div>

      <div class="modalBody">
        <form id="editForm" method="post" action="">
          <div class="field">
            <div class="label">Usuario</div>
            <input class="input" id="mUsername" type="text" value="" disabled />
          </div>

          <div class="field">
          <div class="label">Correo</div>
          <input class="input" id="mEmail" name="email" type="email" placeholder="usuario@dominio.cl" />
          </div>

          <div class="field">
            <div class="label">Rol</div>
            <select id="mRole" name="role" required>
              <option value="VIEWER">VIEWER (solo lectura)</option>
              <option value="ADMIN">ADMIN (gestión socios)</option>
              <option value="SUPERADMIN">SUPERADMIN (todo)</option>
            </select>
          </div>

          <div class="field">
            <div class="label">Teléfono (opcional)</div>
            <input
              class="input"
              id="mPhone"
              name="phone"
              type="text"
              placeholder="Ej: +56912345678"
            />
            <div class="muted" style="margin-top:6px">
              Recomendado formato internacional: <b>+56...</b>
            </div>
          </div>

          <div class="modalActions">
            <button class="btn btnPrimary" type="submit">Guardar cambios</button>
            <button class="btn" type="button" id="cancelModal">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
  const modalBack = document.getElementById("modalBack");
  const editForm = document.getElementById("editForm");
  const mUsername = document.getElementById("mUsername");
  const mRole = document.getElementById("mRole");
  const mPhone = document.getElementById("mPhone");
  const mEmail = document.getElementById("mEmail"); 

  const closeBtn = document.getElementById("closeModal");
  const cancelBtn = document.getElementById("cancelModal");

  function openModal() {
    modalBack.classList.add("open");
    modalBack.setAttribute("aria-hidden", "false");
  }
  function closeModal() {
    modalBack.classList.remove("open");
    modalBack.setAttribute("aria-hidden", "true");
  }

  modalBack.addEventListener("click", (e) => {
    if (e.target === modalBack) closeModal();
  });
  closeBtn.addEventListener("click", closeModal);
  cancelBtn.addEventListener("click", closeModal);

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && modalBack.classList.contains("open")) closeModal();
  });

  document.querySelectorAll("[data-edit]").forEach((btn) => {
    btn.addEventListener("click", () => {
      const id = btn.getAttribute("data-id");
      const username = btn.getAttribute("data-username") || "";
      const role = (btn.getAttribute("data-role") || "VIEWER").toUpperCase();
      const phone = btn.getAttribute("data-phone") || "";
      const email = btn.getAttribute("data-email") || ""; 

      editForm.action = `/admin/users/${id}/update`;

      mUsername.value = username;
      mRole.value = role;
      mPhone.value = phone;
      mEmail.value = email; 

      openModal();
    });
  });
</script>
<%- include("../partials/footer") %>
</body>
</html>

